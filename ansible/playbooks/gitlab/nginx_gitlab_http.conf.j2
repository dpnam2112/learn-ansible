# Map Upgrade header -> Connection value (must be in http context)
map $http_upgrade $connection_upgrade {
  default upgrade;
  ''      close;
}

server {
  listen 80;
  server_name _;

  location = /gitlab { return 301 /gitlab/; }

  # Main GitLab app under /gitlab
  location /gitlab/ {
    proxy_pass http://127.0.0.1:{{ gitlab_ports.http }};
    proxy_set_header Host                $host;
    proxy_set_header X-Real-IP           $remote_addr;
    proxy_set_header X-Forwarded-For     $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto   http;
    proxy_redirect off;

    client_max_body_size 0;
    proxy_read_timeout 300s;
    proxy_connect_timeout 60s;
    proxy_send_timeout 300s;
  }

  # ActionCable/WebSockets for live features
  location /gitlab/-/cable {
    proxy_http_version 1.1;
    proxy_set_header Upgrade    $http_upgrade;
    proxy_set_header Connection $connection_upgrade;
    proxy_set_header Host       $host;
    proxy_set_header X-Forwarded-Proto http;
    proxy_pass http://127.0.0.1:{{ gitlab_ports.http }};
    proxy_read_timeout 3600s;
  }

  # (Optional) Static assets can be cached harder
  # location ~ ^/gitlab/assets/ {
  #   expires 1h;
  #   add_header Cache-Control "public";
  #   proxy_pass http://127.0.0.1:{{ gitlab_ports.http }};
  # }
}

