Vagrant.configure("2") do |config|
  BOX = "ubuntu/jammy64"

  {
    "db"  => "192.168.56.11",
    "app" => "192.168.56.12",
    "db2" => "192.168.56.13",
  }.each do |name, ip|
    config.vm.define name do |node|
      node.vm.box = BOX
      node.vm.hostname = name
      node.vm.network "private_network", ip: ip
      node.vm.provider "virtualbox" do |vb|
        vb.memory = 512
        vb.cpus   = 1
      end
      # make sure Python is there so Ansible modules work
      node.vm.provision "shell", inline: "apt-get update -y && apt-get install -y python3 python3-venv"
    end
  end
end

